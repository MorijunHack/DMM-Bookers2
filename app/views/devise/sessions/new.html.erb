<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :name, class:"form-label" %><br />
      <%= f.text_field :name, autofocus: true,class:"form-control", autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"form-label" %><br />
      <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"form-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>