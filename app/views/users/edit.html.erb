<div class="container">
	<h2>User info</h2>

	<%= form_for @user do |f| %>

		<% if @user.errors.any? %>
			<div id="error_explanation">
				<h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
				<ul>
					<%= @user.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="field">
	      <%= f.label :name, class:"form-label" %>
	      <%= f.text_field :name, class:"form-control", autofocus: true %>
	    </div>

	    <div class="field">
	      <%= f.label :profile_image, class:"form-label" %><br>
	      <%= f.attachment_field :profile_image %>
	    </div>

	    <div class="field">
	      <%= f.label :introduction, class:"form-label" %><br>
	      <%= f.text_area :introduction %>
	    </div>

	    <%= f.submit "Update User", class:"user-edit-sub" %>

    <% end %>

</div>